{
  "name": "maestrobot",
  "version": "1.0.7",
  "description": "MaestroBot - Plataforma educativa offline",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Gerardo Paul Herrera",
  "license": "MIT",
  "devDependencies": {
    "electron": "28.3.3",
    "electron-builder": "24.9.1"
  },
  "build": {
    "appId": "com.maestrobot.app",
    "productName": "MaestroBot",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Maestrobot-Telesecundaria",
      "repo": "maestrobot-organizador-primer-grado"
    }
  }
}
